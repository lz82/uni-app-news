  -webkit-flex: 0 0 auto;
          flex: 0 0 auto;
  color: #333;
  font-size: 14px;
}
.tab-wrapper .tab-container ._ul ._li.active {
  color: #f07373;
}
.tab-wrapper .icon {
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 auto;
          flex: 0 0 auto;
  padding: 0 10px;
  box-sizing: border-box;
  position: relative;
}
.tab-wrapper .icon:before {
  content: '';
  position: absolute;
  top: 6px;
  left: 0;
  width: 1px;
  height: 21px;
  background: #ddd;
