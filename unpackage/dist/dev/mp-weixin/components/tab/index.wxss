  padding: 0;
  margin: 0;
  -webkit-box-flex: 1;
  -webkit-flex: 1 1 auto;
          flex: 1 1 auto;
}
.tab-wrapper .tab-container ._ul ._li {
  padding: 0 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
